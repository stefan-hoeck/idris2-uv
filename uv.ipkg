        , System.UV.Raw.Idle
        , System.UV.Raw.Loop
        , System.UV.Raw.Pipe
        , System.UV.Raw.Pointer
        , System.UV.Raw.Req
        , System.UV.Raw.Signal
        , System.UV.Raw.Stream
        , System.UV.Raw.TCP
        , System.UV.Raw.Timer
        , System.UV.Raw.Util
        , System.UV.Raw.Work

        , System.Rx
        , System.Rx.Core
        , System.Rx.Msg
        , System.Rx.Sink
        , System.Rx.Source

        , System.Rx.Pipe
        , System.Rx.Pipe.Buffer
        , System.Rx.Pipe.FlatMap
        , System.Rx.Pipe.Sync

sourcedir = "src"

