package uv
version = 0.1.0
authors = "stefan-hoeck"
brief   = "Idris2 bindings to libuv"

depends = base >= 0.6.0
        , uv-data
        , elab-util
        , bytestring
        , quantifiers-extra

modules = System.UV
        , System.UV.DNS
        , System.UV.Error
        , System.UV.File
        , System.UV.Handle
        , System.UV.Loop
        , System.UV.Pipe
        , System.UV.Pointer
        , System.UV.Signal
        , System.UV.Stream
        , System.UV.TCP
        , System.UV.Timer
        , System.UV.Util
